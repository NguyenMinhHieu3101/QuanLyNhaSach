<Page x:Class="UngDungQuanLyNhaSach.Pages.BaoCaoDoanhThu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UngDungQuanLyNhaSach.Pages"
      mc:Ignorable="d" 
      Background="White"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BaoCaoDoanhThu">

    <Page.Resources>
        <Style x:Key="Header1" TargetType="TextBlock">
            <Setter Property="FontSize" Value="25" />
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Width" Value="250"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="Title" TargetType="TextBlock">
            <Setter Property="FontSize" Value="25" />
            <!--<Setter Property="FontWeight" Value="Bold"/>-->
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <ControlTemplate x:Key="DatePickerControlTemplate" TargetType="{x:Type DatePicker}">
            <Border Background="{TemplateBinding Background}" 
                    x:Name="Bd" BorderBrush="Black"
                    BorderThickness="{TemplateBinding BorderThickness}" 
                    CornerRadius="10">
                <!--<ScrollViewer x:Name="PART_ContentHost"/>-->
                <DatePicker BorderBrush="Transparent"/>
                <!--<ContentPresenter/>-->
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" TargetName="Bd"/>
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                </Trigger>
                <Trigger Property="Width" Value="Auto">
                    <Setter Property="MinWidth" Value="100"/>
                </Trigger>
                <Trigger Property="Height" Value="Auto">
                    <Setter Property="MinHeight" Value="20"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

    </Page.Resources>

    <StackPanel Margin="30">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <DockPanel LastChildFill="True" Width="250">
                <TextBlock Text="Từ Ngày:" Width="70" VerticalAlignment="Center"/>
                <DatePicker Template="{StaticResource DatePickerControlTemplate}"/>
            </DockPanel>
            <DockPanel LastChildFill="True" Width="250" Margin="100, 0, 0, 0">
                <TextBlock Text="Đến Ngày:" Width="80" VerticalAlignment="Center"/>
                <DatePicker Template="{StaticResource DatePickerControlTemplate}"/>
            </DockPanel>
        </StackPanel>

        <TextBlock Text="BẢNG THỐNG KÊ DOANH THU THÁNG"
                   Style="{StaticResource Header1}"
                   Margin="0, 30, 0, 0"/>

        <DockPanel Height="200" LastChildFill="True" Margin="0, 20, 0, 20" HorizontalAlignment="Center">
            <!--<ListView x:Name="lsvList" Width="350">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="#" Width="50"/>
                        <GridViewColumn Header="Chi Trả" Width="150"/>
                        <GridViewColumn Header="Số Tiền" Width="150"/>
                    </GridView>
                </ListView.View>
            </ListView>-->
            <DataGrid x:Name="chiTraTable" Width="350" Style="{DynamicResource DataGridStyle}" 
                  CellStyle="{StaticResource DataGridCellStyle}" 
                  ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}" 
                  RowStyle="{StaticResource DataGridRowStyle}" 
                  AutoGeneratingColumn="chiTraTable_AutoGeneratingColumn">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="#" IsReadOnly="True" CanUserResize="False" Width="Auto"/>
                    <DataGridTextColumn Header="Chi Trả" IsReadOnly="True" CanUserResize="True" Width="*"/>
                    <DataGridTextColumn Header="Số Tiền" IsReadOnly="True" CanUserResize="True" Width="*"/>
                </DataGrid.Columns>

            </DataGrid>


            <!--<ListView x:Name="lsvList2" Width="350" Margin="20, 0, 0, 0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="#" Width="50"/>
                        <GridViewColumn Header="Thu Nhập" Width="150" />
                        <GridViewColumn Header="Số Tiền" Width="150"/>
                    </GridView>
                </ListView.View>
            </ListView>-->
            <DataGrid x:Name="thuNhapTable" Width="350" Margin="20,0,0,0" Style="{DynamicResource DataGridStyle}" 
                  CellStyle="{StaticResource DataGridCellStyle}" 
                  ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}" 
                  RowStyle="{StaticResource DataGridRowStyle}" 
                  AutoGeneratingColumn="thuNhapTable_AutoGeneratingColumn">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="#" IsReadOnly="True" CanUserResize="False" Width="Auto"/>
                    <DataGridTextColumn Header="Thu Nhập" IsReadOnly="True" CanUserResize="True" Width="*"/>
                    <DataGridTextColumn Header="Số Tiền" IsReadOnly="True" CanUserResize="True" Width="*"/>
                </DataGrid.Columns>

            </DataGrid>

        </DockPanel>

        <DockPanel LastChildFill="True" HorizontalAlignment="Center">
            <TextBlock Text="TỔNG CHI:"
                       Style="{StaticResource Title}"
                   Width="325"
                       />
            <TextBlock Text="TỔNG THU:"
                       Style="{StaticResource Title}"
                       Margin="30,0,0,0"
                       Width="325"
                   />
        </DockPanel>

        <TextBlock Text="LỢI NHUẬN:"
                   Style="{StaticResource Title}"
                   Margin="0, 10, 0, 0"
                   HorizontalAlignment="Center"/>

        <DockPanel HorizontalAlignment="Right">
            <Button Content="Hiện báo cáo" 
                        Height="35" 
                        Width="140"
                        Margin="10,0"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        Style="{StaticResource AddButton}"
                        Click="Button_Click"/>
        </DockPanel>
    </StackPanel>
</Page>
